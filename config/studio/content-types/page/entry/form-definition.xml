<?xml version="1.0" encoding="UTF-8"?>
<form>
   <title>A Page</title>
   <description>A Simple Page</description>
   <objectType>page</objectType>
   <content-type>/page/entry</content-type>
   <properties>
      <property>
         <name>placeInNav</name>
         <label>Show In Nav</label>
         <value>true</value>
         <type>boolean</type>
      </property>
      <property>
         <name>display-template</name>
         <label>Display Template</label>
         <value>/templates/web/entry.ftl</value>
         <type>template</type>
      </property>
      <property>
         <name>descriptor-mapper</name>
         <label>Descriptor Mapper</label>
         <value>hierarchical-mapper</value>
         <type>string</type>
      </property>
      <property>
         <name>no-template-required</name>
         <label>No Template Required</label>
         <type>boolean</type>
         <value/>
      </property>
   </properties>
   <sections>
      <section>
         <title>Page Settings</title>
         <description/>
         <defaultOpen>true</defaultOpen>
         <fields>
            <field>
               <type>file-name</type>
               <id>file-name</id>
               <iceId/>
               <title>Page URL</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>size</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>maxlength</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>path</name>
                     <value/>
                     <type>string</type>
                  </property>
                  <property>
                     <name>readonly</name>
                     <value/>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints/>
            </field>
            <field>
               <type>input</type>
               <id>internal-name</id>
               <iceId/>
               <title>File Title</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>size</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>maxlength</name>
                     <value>60</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>readonly</name>
                     <value/>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>tokenize</name>
                     <value>false</value>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints>
                  <constraint>
                     <name>required</name>
                     <value>true</value>
                     <type>int</type>
                  </constraint>
               </constraints>
            </field>
            <field>
               <type>checkbox</type>
               <id>disabled</id>
               <iceId/>
               <title>Disable Page</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>readonly</name>
                     <value/>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints>
                  <constraint>
                     <name>required</name>
                     <value/>
                     <type>boolean</type>
                  </constraint>
               </constraints>
            </field>
         </fields>
      </section>
      <section>
         <title>Main Content</title>
         <description/>
         <defaultOpen>true</defaultOpen>
         <fields>
            <field>
               <type>input</type>
               <id>title_t</id>
               <iceId>title</iceId>
               <title>Title</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>size</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>maxlength</name>
                     <value>50</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>readonly</name>
                     <value/>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>tokenize</name>
                     <value>false</value>
                     <type>boolean</type>
                  </property>
               </properties>
               <constraints>
                  <constraint>
                     <name>required</name>
                     <value>true</value>
                     <type>boolean</type>
                  </constraint>
                  <constraint>
                     <name>pattern</name>
                     <value/>
                     <type>string</type>
                  </constraint>
               </constraints>
            </field>
            <field>
               <type>rte</type>
               <id>body_html</id>
               <iceId>main</iceId>
               <title>Body Copy</title>
               <description/>
               <defaultValue/>
               <help/>
               <properties>
                  <property>
                     <name>cols</name>
                     <value/>
                     <type>int</type>
                  </property>
                  <property>
                     <name>rows</name>
                     <value/>
                     <type>int</type>
                  </property>
                  <property>
                     <name>maxlength</name>
                     <value/>
                     <type>int</type>
                  </property>
                  <property>
                     <name>allowResize</name>
                     <value>true</value>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>imageManager</name>
                     <value>desktopImages</value>
                     <type>image</type>
                  </property>
                  <property>
                     <name>supportedChannels</name>
                     <value>[{ value: "", key: "", size: "" }]</value>
                     <type>string</type>
                  </property>
                  <property>
                     <name>width</name>
                     <value>600</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>height</name>
                     <value>200</value>
                     <type>int</type>
                  </property>
                  <property>
                     <name>forceRootBlockPTag</name>
                     <value>true</value>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>forcePTags</name>
                     <value>true</value>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>forceBRTags</name>
                     <value>false</value>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>forceImageAlts</name>
                     <value>false</value>
                     <type>boolean</type>
                  </property>
                  <property>
                     <name>rteConfiguration</name>
                     <value>generic</value>
                     <type>string</type>
                  </property>
               </properties>
               <constraints>
                  <constraint>
                     <name>required</name>
                     <value>true</value>
                     <type>int</type>
                  </constraint>
               </constraints>
            </field>
         </fields>
      </section>
   </sections>
   <datasources>
      <datasource>
         <type>img-desktop-upload</type>
         <id>desktopImages</id>
         <title>Desktop Images</title>
         <interface>image</interface>
         <properties>
            <property>
               <name>repoPath</name>
               <value>/static-assets/images/pages/{objectId}/</value>
               <type>undefined</type>
            </property>
         </properties>
      </datasource>
   </datasources>
</form>
