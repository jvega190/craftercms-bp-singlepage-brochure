<?xml version="1.0" encoding="UTF-8"?>
<!-- sidebar.xml
	This configuration file controls the SideBar in Crafter Studio. The SideBar is the left bar that shows
	different projections of the content in addition to other tools to assist in content authoring.

	<contextNav>
		<modulehook>
			<name>dashboard</name>
			<params>
				<label>Dashboard</label>
				<path>/site-dashboard</path>
				<icon>  	               (optional icon customization - only one state (no tree link))
					<class>fa-cog</class>  (change default icon - using Font Awesome class)
					<styles> 	           (Change default icon styles - using css rules)
						<color>#409a00</color>
						<font-size>16px</font-size>
					</styles>
				</icon>
				<roles>
					<role>admin</role>
					<role>developer</role>
				</roles>
				<label>Site Config</label>
				<path>/site-config</path>
				<showRootItem>true</showRootItem>
				<onClick>preview</onClick>
			</params>
		</modulehook>
	</contextNav>

-->
<contextNav>
    <contexts>
        <context>
            <groups>
                <group>
                    <menuItems>
                        <menuItem>
                            <modulehooks>
                                <!-- dashboard -->
                                <modulehook>
                                    <name>dashboard</name>
                                    <params>
                                        <label>Dashboard</label>
                                        <path>/site-dashboard</path>
                                    </params>
                                </modulehook>

                                <!-- Site Config -->
                                <modulehook>
                                    <name>site-config</name>
                                    <divider>true</divider>
                                    <params>
                                        <roles>
                                            <role>admin</role>
                                            <role>developer</role>
                                        </roles>
                                        <label>Site Config</label>
                                        <path>/site-config</path>
                                    </params>
                                </modulehook>

                                <!-- Path Navigator: Pages -->
                                <modulehook>
                                    <render>PagesWidget</render>
                                    <props>
                                        <label>Pages</label>
                                        <icon>
                                            <baseClass>fa fa-file-text-o</baseClass>
                                        </icon>
                                        <rootPath>/site/website</rootPath>
                                        <locale>en</locale>
                                    </props>
                                    <container>
                                        <style>
                                            <padding-left>9px</padding-left>
                                        </style>
                                        <class>next-pages-widget</class>
                                    </container>
                                </modulehook>

                                <!-- Path Navigator: Components -->
                                <modulehook>
                                    <render>PagesWidget</render>
                                    <props>
                                        <label>Components</label>
                                        <icon>
                                            <baseClass>fa fa-puzzle-piece</baseClass>
                                        </icon>
                                        <rootPath>/site/components</rootPath>
                                        <locale>en</locale>
                                    </props>
                                    <container>
                                        <style>
                                            <padding-left>9px</padding-left>
                                        </style>
                                        <class>next-pages-widget</class>
                                    </container>
                                </modulehook>

                                <!-- Path Navigator: Static Assets -->
                                <modulehook>
                                    <render>PagesWidget</render>
                                    <props>
                                        <label>Static Assets</label>
                                        <icon>
                                            <baseClass>fa fa-image</baseClass>
                                        </icon>
                                        <rootPath>/static-assets</rootPath>
                                        <locale>en</locale>
                                    </props>
                                    <container>
                                        <style>
                                            <padding-left>9px</padding-left>
                                        </style>
                                        <class>next-pages-widget</class>
                                    </container>
                                </modulehook>

                                <!-- Path Navigator: Templates -->
                                <modulehook>
                                    <render>PagesWidget</render>
                                    <props>
                                        <label>Templates</label>
                                        <icon>
                                            <baseClass>fa fa-file-code-o</baseClass>
                                        </icon>
                                        <rootPath>/templates</rootPath>
                                        <locale>en</locale>
                                    </props>
                                    <container>
                                        <style>
                                            <padding-left>9px</padding-left>
                                        </style>
                                        <class>next-pages-widget</class>
                                    </container>
                                </modulehook>

                                <!-- Path Navigator: Scripts -->
                                <modulehook>
                                    <render>PagesWidget</render>
                                    <props>
                                        <label>Scripts</label>
                                        <icon>
                                            <baseClass>fa fa-code</baseClass>
                                        </icon>
                                        <rootPath>/scripts</rootPath>
                                        <locale>en</locale>
                                    </props>
                                    <container>
                                        <style>
                                            <padding-left>9px</padding-left>
                                        </style>
                                        <class>next-pages-widget</class>
                                    </container>
                                </modulehook>
                            </modulehooks>
                        </menuItem>
                    </menuItems>
                </group>
            </groups>
        </context>
    </contexts>
</contextNav>
